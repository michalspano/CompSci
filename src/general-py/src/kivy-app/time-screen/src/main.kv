<MainLayout>

    # Specify default background color
    canvas.before:
        Color:
            rgba: (46/255, 52/255, 64/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size 

    # Specify main screen layout - BoxLayout
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 30
        spacing: 10

        Image:

            # Image preferneces
            id: main_img
            source: 'assets/stock_photo.jpg'
            allow_strech: True
            keep_ratio: False

            opacity: 0
            size_hint: .5, .5
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}

        Label:
            id: my_label
            text: ''
            opacity: 0
            font_size: 35

            # Label preferneces
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        
        RoundedButton:
            id: btn
            font_size: 25
            text: 'Click me!'
            pos_hint: {"center_x": .5}

            # Size
            size_hint_x: .5
            size_hint_y: .15

            # Call function upon call
            on_release: root.initial_button_animation(self)

# Create a rounded button class
<RoundedButton@Button>:
    background_color: (0, 0, 0, 0)
    canvas.before:
        Color:
            # Default color prefs
            rgba: (.4 , .4, .4, 1) if self.state=='normal' else (0, .7, .7, 1)  

        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25,]